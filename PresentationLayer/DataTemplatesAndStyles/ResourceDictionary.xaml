    <Style x:Key="RegisterBackButton" TargetType="Button">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <Border x:Name="border"
                     Background="LightGray"
                     Height="30"
                     Width="30"
                     VerticalAlignment="Top"
                     HorizontalAlignment="Left"
                     CornerRadius="100"
                     Margin="5">
                            <StackPanel Orientation="Horizontal">

                                <StackPanel x:Name="iconStackPanel"
                                 Height="30"
                                 Width="30"
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Center"
                                 Orientation="Vertical"
                                 Margin="0,0,0,0">

                                   
                                    <Image
                                Height="25"
                                Width="25"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Margin="-2,3,0,0"
                                Stretch="Fill"
                                Source="/DataTemplatesAndStyles/back_button.png"
                                Visibility="Visible"/>


                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <ControlTemplate.Triggers>
                        <!-- Hover-effekt -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" TargetName="border" Value="#E9EBED" />
                        </Trigger>

                        <!-- Tryck-effekt -->
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" TargetName="border" Value="#C1C1C1" />
                        </Trigger>

                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="RegisterTextBoxStyle" TargetType="TextBox">
        <Setter Property="Background" Value="White"/>
        <Setter Property="Padding" Value="10,5"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="Cursor" Value="IBeam"/>
        <Setter Property="SelectionBrush" Value="#0078D4"/>

        
        <Setter Property="Validation.ErrorTemplate">
            <Setter.Value>
                <ControlTemplate>
                    
                </ControlTemplate>
            </Setter.Value>
        </Setter>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Border x:Name="OuterBorder"
                        Background="{TemplateBinding Background}"
                        BorderThickness="1"
                        CornerRadius="10">
                        <Grid>
                            <Border Background="Transparent"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="10">
                                <ScrollViewer x:Name="PART_ContentHost"/>
                            </Border>
                        </Grid>
                    </Border>


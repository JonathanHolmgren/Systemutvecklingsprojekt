    <Style x:Key="ComboBoxStyleTemplate" TargetType="ComboBox">
        <Setter Property="Foreground" Value="#333333"/>
        <Setter Property="Background" Value="White"/>
        <Setter Property="BorderBrush" Value="Black"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="5,3"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ComboBox">
                    <Grid>
                        <Border
                        x:Name="MainBorder"
                        Background="{TemplateBinding Background}" 
                        BorderBrush="{TemplateBinding BorderBrush}" 
                        BorderThickness="{TemplateBinding BorderThickness}" 
                        CornerRadius="5">

                            <ToggleButton 
                            x:Name="ToggleButton" 
                            IsChecked="{Binding Path=IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}" 
                            Background="Transparent" 
                                BorderBrush="Transparent"
                                Padding="0"
                                                        Focusable="False"
                                HorizontalContentAlignment="Stretch">

                                <Grid>
                                    <ContentPresenter
                                    Margin="10,0,25,0"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Left"
                                    Content="{Binding SelectedItem.AgentNumber, RelativeSource={RelativeSource AncestorType=ComboBox}}"/>
                                    <!--Byt AgentNumber mot det du har i DisplayMemberPath-->
                                    <Path
                                    x:Name="DropDownGlyph"
                                    Data="M 0 0 L 4 4 L 8 0 Z"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    Margin="0,0,10,0"
                                    Width="10"
                                    Height="5"
                                    Fill="#333333"/>
                                </Grid>
                            </ToggleButton>
                        </Border>

                        <Popup 
                        x:Name="PART_Popup"
                        Placement="Bottom"
                        IsOpen="{TemplateBinding IsDropDownOpen}"
                        AllowsTransparency="True"
                        Focusable="False"
                        PopupAnimation="Slide">
                            <Border 
                            Background="White"
                            BorderBrush="#E1E1E1"
                            BorderThickness="1"
                            CornerRadius="5"
                            Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=ComboBox}}">
                                <ScrollViewer x:Name="DropDownScrollViewer">
                                    <!-- ItemsPresenter för att visa datan i ComboBox -->
                                    <ItemsPresenter/>
                                </ScrollViewer>
                            </Border>
                        </Popup>
                    </Grid>

                    <ControlTemplate.Triggers>
                        <!-- Ta bort hover-effekt -->
                        <!--<Trigger Property="IsMouseOver" Value="False">
                            <Setter TargetName="ToggleButton" Property="Background" Value="#F3F3F3"/>
                            <Setter TargetName="ToggleButton" Property="BorderBrush" Value="#F3F3F3"/>
                        </Trigger>-->
                        
                        <!-- Ta bort tryck-effekt -->
                        <Trigger Property="IsDropDownOpen" Value="True">
                            <Setter TargetName="ToggleButton" Property="Background" Value="#F3F3F3"/>
                            <Setter TargetName="ToggleButton" Property="BorderBrush" Value="#F3F3F3"/>
                            <Setter TargetName="DropDownGlyph" Property="Fill" Value="#F3F3F3"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


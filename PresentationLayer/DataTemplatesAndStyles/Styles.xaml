    <Style x:Key="PopupStyleCreatePrivateCustomer" TargetType="Popup">
        <Setter Property="AllowsTransparency" Value="True" />
        <Setter Property="Focusable" Value="False" />
        <Setter Property="HorizontalOffset" Value="-2" />
        <Setter Property="Placement" Value="Right" />
        <Setter Property="PopupAnimation" Value="None" />
        <Setter Property="VerticalOffset" Value="0" />
        <Setter Property="Child">
            <Setter.Value>
                <Border x:Name="PopupBorder"
                    Background="DarkGray"
                    BorderThickness="0"
                    Height="50"
                    Width="220">
                    <Grid>
                        <Border Background="#333333"
                            Width="1"
                            VerticalAlignment="Stretch"
                            HorizontalAlignment="Left" />
                        <Button x:Name="PopupButton"
                            Background="Transparent"
                            BorderThickness="0"
                            VerticalAlignment="Stretch"
                            HorizontalAlignment="Stretch"
                                 Command="{Binding ChangeViewCommand}"
                                 CommandParameter="{x:Type views:RegisterPrivateCustomerView}">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Foreground" Value="Black"/>
                                    <Setter Property="Cursor" Value="Hand"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border x:Name="ButtonBorder" Background="{TemplateBinding Background}">
                                                    <ContentPresenter />
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="ButtonBorder" Property="Background" Value="#E9EBED" />
                                                    </Trigger>
                                                    <Trigger Property="IsPressed" Value="True">
                                                        <Setter TargetName="ButtonBorder" Property="Background" Value="#C1C1C1" />
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                            <Grid Margin="1,0,0,0">
                                <Image Source="Assets/register_company.png"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"
                                   Margin="10,0,0,0"
                                   Stretch="None" />
                                <TextBlock Foreground="Black"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Left"
                                       FontSize="18"
                                       Text="Privatkunder"
                                       FontFamily="Fonts/#Open Sans Regular"
                                       Margin="70,0,0,0" />
                            </Grid>
                        </Button>
                    </Grid>
                </Border>
            </Setter.Value>
        </Setter>

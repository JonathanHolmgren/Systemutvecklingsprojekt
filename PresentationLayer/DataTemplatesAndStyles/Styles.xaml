                    <Button Style="{StaticResource MenuButtonShowCustomers}"
                            Command="{Binding ChangeViewCommand}"
                            CommandParameter="{x:Type views:ShowProspectsView}" />

                    <Button Style="{StaticResource MenuButtonExportBillingInfo}"
                            Command="{Binding ChangeViewCommand}"
                            CommandParameter="{x:Type views:ExportBillingInformationView}" />

                    <Button Style="{StaticResource MenuButtonCalculateCommision}"
                            Command="{Binding ChangeViewCommand}"
                            CommandParameter="{x:Type views:CalculateComissionView}" />
                </StackPanel>
                
                <StackPanel Orientation="Horizontal">
                    <Image Source="Assets/user_mini.png"
                           VerticalAlignment="Top"
                           Stretch="None"
                           Margin="5,8,0,0"/>
                    <TextBlock FontFamily="Fonts/#Saira SemiBold"
                               FontSize="10"
                               VerticalAlignment="Top"
                               HorizontalAlignment="Left"
                               Foreground="#959FAC"
                                Margin="5,10,10,0">
